<h2>Edit
    <%=@location.name%>
</h2>

<form action="/locations/<%= @location.id %>/edit" method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <h3>
        <label>New name</label>
    </h3>
    <input type="text" name="location[name]" value="<%=@location.name%>">
    <br>
    <h3>
        <label>New edible</label>
    </h3>
    <input type="text" name="location[edible]" value="<%=@location.edible.name%>">

    <input type="submit" value="submit">
</form>
